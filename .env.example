# Database Configuration (Use Heroku add-ons like JawsDB or ClearDB)
DB_HOST=your_heroku_db_host
DB_USER=your_heroku_db_user
DB_PASSWORD=your_heroku_db_password
DB_NAME=your_heroku_db_name

# JWT Secret (Generate a strong secret)
JWT_SECRET=your_production_jwt_secret_here

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# Port (Heroku will set this automatically)
PORT=${PORT}

# Node Environment
NODE_ENV=production
